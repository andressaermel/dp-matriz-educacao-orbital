# EditorConfig ajuda a manter estilos consistentes entre editores/IDEs
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.js]
indent_style = tab

[*.{html,htm,njk}]
indent_style = space
indent_size = 2

[*.{sass,scss,css}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2

